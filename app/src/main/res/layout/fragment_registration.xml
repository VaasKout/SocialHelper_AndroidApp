<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.example.socialhelper.registration.RegistrationViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar_reg"
                style="@style/Widget.MaterialComponents.Toolbar.Primary"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_scrollFlags="scroll|enterAlways|snap"
                app:menu="@menu/top_bar_reg"
                app:navigationIcon="@drawable/ic_back_arrow"
                app:title="@string/registration"
                tools:visibility="gone"/>

        </com.google.android.material.appbar.AppBarLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <RelativeLayout
                android:id="@+id/constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"
                tools:context=".registration.RegistrationFragment">

                <TextView
                    android:id="@+id/enter_name_surname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_4dp"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:layout_marginEnd="@dimen/dimen_4dp"
                    android:gravity="end"
                    android:padding="@dimen/dimen_4dp"
                    android:text="@string/enter_name_surname"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                    android:textStyle="italic"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/userInputReg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_4dp"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:layout_marginEnd="@dimen/dimen_4dp"
                    android:hint="@string/user_input_hint"
                    app:boxCornerRadiusTopEnd="@dimen/dimen_6dp"
                    app:boxCornerRadiusTopStart="@dimen/dimen_6dp"
                    app:endIconMode="clear_text"
                    app:errorEnabled="true"
                    android:layout_below="@id/enter_name_surname">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/text_input_user_edit_reg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/surnameInputReg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_4dp"
                    android:layout_marginEnd="@dimen/dimen_4dp"
                    app:boxCornerRadiusTopEnd="@dimen/dimen_6dp"
                    app:boxCornerRadiusTopStart="@dimen/dimen_6dp"
                    app:endIconMode="clear_text"
                    app:errorEnabled="true"
                    android:layout_below="@+id/userInputReg">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/surname_edit_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/surname"
                        android:inputType="textPersonName" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/enter_login_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_4dp"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:layout_marginEnd="@dimen/dimen_4dp"
                    android:gravity="end"
                    android:padding="@dimen/dimen_4dp"
                    android:text="@string/enter_login_email_password"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                    android:textStyle="italic"
                   android:layout_below="@+id/surnameInputReg"/>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_4dp"
                    android:layout_marginEnd="@dimen/dimen_4dp"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:hint="@string/login"
                    app:boxCornerRadiusTopEnd="@dimen/dimen_6dp"
                    app:boxCornerRadiusTopStart="@dimen/dimen_6dp"
                    app:endIconMode="clear_text"
                    app:errorEnabled="true"
                    android:layout_below="@+id/enter_login_password">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/loginEdit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_4dp"
                    android:layout_marginEnd="@dimen/dimen_4dp"
                    android:hint="@string/email"
                    app:boxCornerRadiusTopEnd="@dimen/dimen_6dp"
                    app:boxCornerRadiusTopStart="@dimen/dimen_6dp"
                    app:errorEnabled="true"
                    android:layout_below="@id/login">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/email_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress" />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/passwordInputReg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_4dp"
                    android:layout_marginEnd="@dimen/dimen_4dp"
                    app:boxCornerRadiusTopEnd="@dimen/dimen_6dp"
                    app:boxCornerRadiusTopStart="@dimen/dimen_6dp"
                    app:counterEnabled="true"
                    app:counterMaxLength="8"
                    app:endIconMode="password_toggle"
                    app:errorEnabled="true"
                    android:layout_below="@+id/email">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/text_input_pass_edit_reg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/password_input_hint"
                        android:inputType="numberPassword" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/confirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_4dp"
                    android:layout_marginEnd="@dimen/dimen_4dp"
                    android:hint="@string/confirm_password"
                    app:boxCornerRadiusTopEnd="@dimen/dimen_6dp"
                    app:boxCornerRadiusTopStart="@dimen/dimen_6dp"
                    app:counterEnabled="true"
                    app:counterMaxLength="8"
                    app:endIconMode="password_toggle"
                    app:errorEnabled="true"
                    android:layout_below="@+id/passwordInputReg">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/confirm_password_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberPassword" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/enter_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_4dp"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:layout_marginEnd="@dimen/dimen_4dp"
                    android:gravity="end"
                    android:padding="@dimen/dimen_4dp"
                    android:text="@string/enter_reference_number"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                    android:textStyle="italic"
                    android:layout_below="@id/confirmPassword" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/numberReference"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_4dp"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:layout_marginEnd="@dimen/dimen_4dp"
                    app:boxCornerRadiusTopEnd="@dimen/dimen_6dp"
                    app:boxCornerRadiusTopStart="@dimen/dimen_6dp"
                    app:endIconMode="clear_text"
                    app:errorEnabled="true"
                    android:layout_below="@+id/enter_category">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/number_reference_input_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/number_reference"
                        android:imeOptions="actionDone"
                        android:inputType="number"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/materialButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="64dp"
                    android:layout_marginEnd="@dimen/dimen_4dp"
                    android:layout_marginBottom="16dp"
                    android:onClick="@{() -> viewModel.onStartNavigating()}"
                    android:text="@string/register"
                    android:layout_below="@+id/numberReference"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"/>

            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>